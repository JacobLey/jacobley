{
  "name": "rivendell",
  "version": "0.3.4",
  "description": "Preprocessor for monorepo CI configs.",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "author": "jacobley",
  "license": "MIT",
  "repository": "jacobley/jacobley",
  "homepage": "https://github.com/JacobLey/jacobley/tree/main/apps/rivendell#readme",
  "bugs": {
    "url": "https://github.com/jacobley/jacobley/issues"
  },
  "keywords": [
    "monorepo",
    "ci",
    "preprocessor",
    "test",
    "build"
  ],
  "sideEffects": false,
  "types": "./dist/rivendell.js",
  "exports": {
    ".": {
      "types": "./src/rivendell.ts",
      "node": "./dist/rivendell.js"
    }
  },
  "bin": {
    "rivendell-local": "./cli.mjs"
  },
  "publishConfig": {
    "bin": {
      "rivendell": "./dist/cli.js"
    },
    "exports": {
      ".": {
        "node": "./dist/rivendell.js"
      }
    }
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "default-import": "workspace:^",
    "dependency-order": "workspace:^",
    "entry-script": "workspace:^",
    "find-import": "workspace:^",
    "juniper": "workspace:^",
    "minimatch": "^9.0.3",
    "named-patch": "workspace:^",
    "parse-cwd": "workspace:^",
    "yaml": "^2.3.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.10",
    "@types/sinon": "^10.0.20",
    "@types/yargs": "^17.0.29",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "nx-tsc": "workspace:^",
    "nx-update-ts-references": "workspace:^",
    "nyc": "^15.1.0",
    "sinon": "^17.0.0",
    "typescript": "^5.2.2"
  }
}
