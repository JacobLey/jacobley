{
  "name": "rivendell",
  "version": "0.3.1",
  "description": "Preprocessor for monorepo CI configs.",
  "engines": {
    "node": ">=16.15",
    "npm": ">=7"
  },
  "type": "module",
  "author": "jacobley",
  "license": "MIT",
  "repository": "jacobley/jacobley",
  "homepage": "https://github.com/JacobLey/jacobley/tree/main/apps/rivendell#readme",
  "bugs": {
    "url": "https://github.com/jacobley/jacobley/issues"
  },
  "keywords": [
    "monorepo",
    "ci",
    "preprocessor",
    "test",
    "build"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "coverage": "rushx instrument && nyc mocha ./nyc/tests/unit",
    "instrument": "nyc instrument --nycrc-path=nyc.instrument.cjs ./dist ./nyc",
    "lint": "rush lint-package",
    "test": "echo NO TESTS YET",
    "unit-test": "mocha ./dist/tests/unit"
  },
  "main": "./dist/rivendell.js",
  "exports": {
    ".": {
      "types": [
        "./src/rivendell.ts",
        "./dist/rivendell.d.ts"
      ],
      "default": "./dist/rivendell.js"
    }
  },
  "bin": {
    "rivendell-local": "./cli.mjs"
  },
  "publishConfig": {
    "bin": {
      "rivendell": "./dist/cli.js"
    }
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "default-import": "workspace:^",
    "dependency-order": "workspace:^",
    "entry-script": "workspace:^",
    "juniper": "workspace:^",
    "minimatch": "^5.0.1",
    "named-patch": "workspace:^",
    "parse-cwd": "workspace:^",
    "yaml": "^2.1.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/minimatch": "3.0.5",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.35",
    "@types/sinon": "10.0.11",
    "@types/yargs": "17.0.10",
    "chai": "4.3.6",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "sinon": "14.0.0",
    "typescript": "4.7.1-rc"
  }
}
