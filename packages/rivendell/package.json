{
  "name": "rivendell",
  "version": "0.0.0",
  "description": "Preprocessor for monorepo CI configs.",
  "engines": {
    "node": ">=16.15",
    "npm": ">=7"
  },
  "type": "module",
  "author": "jacobley",
  "license": "MIT",
  "repository": "jacobley/jacobley",
  "homepage": "https://github.com/jacobley/jacobley/packages/rivendell#readme",
  "bugs": {
    "url": "https://github.com/jacobley/jacobley/issues"
  },
  "keywords": [
    "monorepo",
    "ci",
    "preprocessor",
    "test",
    "build"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc --build",
    "build:ci": "tsc",
    "coverage": "npm run instrument && nyc mocha ./nyc/tests/unit",
    "instrument": "nyc instrument --nycrc-path=nyc.instrument.cjs ./dist ./nyc",
    "lint": "npm run -w=../.. --include-workspace-root package-lint",
    "lint:fix": "npm run -w=../.. --include-workspace-root package-lint:fix",
    "test": "echo NO TESTS YET",
    "unit-test": "mocha ./dist/tests/unit"
  },
  "main": "./dist/mono.js",
  "exports": {
    ".": {
      "types": [
        "./src/mono.ts",
        "./dist/mono.d.ts"
      ],
      "default": "./dist/mono.js"
    }
  },
  "bin": {
    "rivendell": "./cli.js"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "default-import": "file:../default-import",
    "dependency-order": "file:../dependency-order",
    "entry-script": "file:../entry-script",
    "juniper": "file:../juniper",
    "minimatch": "^5.0.1",
    "named-patch": "file:../named-patch",
    "parse-cwd": "file:../parse-cwd",
    "root-package-json": "file:../root-package-json",
    "yaml": "^2.1.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "chai": "4.3.6",
    "sinon": "14.0.0"
  }
}
