{
  "name": "root-package-json",
  "version": "0.0.0",
  "description": "Find the root package.json from an npm workspace.",
  "engines": {
    "node": ">=14",
    "npm": ">=8"
  },
  "type": "module",
  "author": "jacobley",
  "license": "MIT",
  "repository": "jacobley/jacobley",
  "homepage": "https://github.com/jacobley/jacobley/packages/root-package-json#readme",
  "bugs": {
    "url": "https://github.com/jacobley/jacobley/issues"
  },
  "keywords": [
    "root",
    "package.json",
    "workspace"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc --build",
    "build:ci": "tsc",
    "coverage": "npm run instrument && nyc mocha ./nyc/tests/unit",
    "instrument": "nyc instrument --nycrc-path=nyc.instrument.cjs ./dist ./nyc",
    "lint": "npm run -w=../.. --include-workspace-root package-lint",
    "lint:fix": "npm run -w=../.. --include-workspace-root package-lint:fix",
    "test": "npm run coverage",
    "unit-test": "mocha ./dist/tests/unit"
  },
  "main": "./dist/root-package-json.js",
  "exports": {
    ".": {
      "types": [
        "./src/root-package-json.ts",
        "./dist/root-package-json.d.ts"
      ],
      "node": "./dist/root-package-json.js"
    }
  },
  "dependencies": {
    "parse-cwd": "file:../parse-cwd"
  },
  "devDependencies": {
    "chai": "4.3.6"
  }
}
